FROM node:20-alpine

WORKDIR /app

# Install dependencies for native modules (argon2, bcrypt)
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including dev)
RUN npm install

# Copy application code (will be overridden by volume in docker-compose.dev.yml)
COPY . .

# Expose port
EXPOSE 3000

# Start with nodemon for hot reload
CMD ["npm", "run", "dev"]
